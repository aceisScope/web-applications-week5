html
  head
    title= "Tic Tac Toe"
    style
      include styles.css
  body
    div(id="board")
    table(id="game")
      each row in board
        tr
          each col in row
            td=col
    p.
    form(method="POST", action='/restart', id="restart_form")
      input(type='submit' value="Restart")
    form(method='POST', action='/submit', type='hidden', id='game_form')
      input(type='hidden', name='row', id='row', value='')
      input(type='hidden', name='col', id='col', value='')
    script 
      include game.js
    script. 
      var winner = #{winner}
      if (winner != 0)
        alert("Player " + winner + " won!")

    